<odoo>
    <data>
        <record id="network_ip_list_view" model="ir.ui.view">
            <field name="name">network.ip.list</field>
            <field name="model">network.ip</field>
            <field name="arch" type="xml">
                <list>
                    <field name="ip_address"/>
                    <field name="ip_type"/>
                    <field name="status"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="network_ip_form_view" model="ir.ui.view">
            <field name="name">network.ip.form</field>
            <field name="model">network.ip</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ip_address"/>
                            <field name="ip_type"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="network_ip_action">
            <field name="name">Network IPs</field>
            <field name="res_model">network.ip</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="network_ip_list_view"/>
        </record>

        <menuitem id="network_ip_menu_root" name="Network Monitor" sequence="10"/>

        <menuitem id="network_ip_menu" name="IP Addresses" parent="network_ip_menu_root" action="network_ip_action" sequence="10"/>
    </data>
</odoo>
